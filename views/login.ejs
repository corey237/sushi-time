<%- include('partials/_header') %>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <title>Sushi Time üç£</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/styles/home.css" />
    <link rel="stylesheet" href="/styles/nav.css" />
    <link rel="stylesheet" href="/styles/login.css" />
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <main style="margin: 120px">
      <div class="card text-center">
        <div class="card-body d-flex flex-column justify-content-center card text-black bg-light" style="height: 400px">
          <h3 class="card-title" style="margin-bottom: 30px">User Login</h3>
          <form class="form-inline" action="/login" method="POST">
            <div class="form-group mb-2 container d-flex flex-column">
              <div class="d-flex flex-column" id="emailEnter">
                <label class="align-self-start ml-1" for="email">Username:</label>
                <input class="form-control" type="email" name="email" placeholder="Enter your email as username."
                  style="width: 300px; margin-bottom: 1em" />
              </div>
              <div class="d-flex flex-column" id="passwordEnter">
                <label class="align-self-start ml-1" for="password">Password:</label>
                <input class="form-control" type="password" name="password" placeholder="Enter your password here."
                  style="width: 300px; margin-bottom: 1em" />
              </div>
              <button type="submit" class="loginButton">
                Log in
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </body>

  </html>
